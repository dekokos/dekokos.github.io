- var currentPage = "home"
-
    var pages = [
    {
        id: "home",
        href: "index.html#main",
        title: "ссылка 1"
    },
    {
        id: "about",
        href: "index.html#main2",
        title: "ссылка 2"
    }
    ];
nav.main-menu
    ul.main-menu__list
        each item in pages
            li.main-menu__item(class=(currentPage === item.id) ? "main-menu__item--active": "")
                a.main-menu__link(href=item.href)=item.title
